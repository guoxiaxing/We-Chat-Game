  background: #ffff99;
  width:90%;
  height:800rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
}
.choose-view{
  display: inline-block;
  margin-left: 25rpx;
}
.choose-V{
  margin-top: 30rpx;
}
.choose-image{
  height: 180rpx;
  width: 180rpx;
   border-radius: 50%; 
}
.againBtn{
   margin-top:30rpx;
  background: #ff9966;
  width:500rpx;
}